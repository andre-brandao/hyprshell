{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["@girs/*"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useJsxKeyInIterable": "off"
			}
		}
	},

	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"attributePosition": "multiline",
			"trailingCommas": "all",
			"semicolons": "asNeeded",
			"lineWidth": 80
		}
	}
}
